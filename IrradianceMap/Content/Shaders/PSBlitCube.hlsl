#include "CubeMap.hlsli"

//--------------------------------------------------------------------------------------
// Structure
//--------------------------------------------------------------------------------------
struct PSIn
{
	float4 Pos	: SV_POSITION;
	float2 UV	: TEXCOORD;
};

//--------------------------------------------------------------------------------------
// Constant buffer
//--------------------------------------------------------------------------------------
cbuffer cb
{
	uint g_slice;
};

//--------------------------------------------------------------------------------------
// Texture
//--------------------------------------------------------------------------------------
TextureCube<float3>	g_txSource;

//--------------------------------------------------------------------------------------
// Texture sampler
//--------------------------------------------------------------------------------------
SamplerState		g_smpLinear;

//--------------------------------------------------------------------------------------
// Pixel shader
//--------------------------------------------------------------------------------------
float3 main(PSIn input) : SV_TARGET
{
	const float3 uv = GetCubeTexcoord(g_slice, input.UV);

	return g_txSource.SampleLevel(g_smpLinear, uv, 0.0);
}
